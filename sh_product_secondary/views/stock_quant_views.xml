<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- simple list -->
    <record id="sh_stock_quant_list_inherit_simple" model="ir.ui.view">
        <field name="name">sh.stock.quant.list.inherit.simple</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.view_stock_quant_tree_simple"/>
        <field name="arch" type="xml">
            <xpath expr="//list" position="inside">
                <field name="secondary_unit_id" optional="show"/>
                <field name="secondary_qty" optional="show"/>
            </xpath>
        </field>
    </record>

    <!-- primary list -->
    <record id="sh_stock_quant_list_inherit_primary" model="ir.ui.view">
        <field name="name">sh.stock.quant.list.inherit.primary</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.view_stock_quant_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//list" position="inside">
                <field name="secondary_unit_id" optional="show"/>
                <field name="secondary_qty" optional="show"/>
            </xpath>
        </field>
    </record>

    <!-- editable inventory list -->
    <record id="sh_stock_quant_list_inherit_inventory_editable" model="ir.ui.view">
        <field name="name">sh.stock.quant.list.inherit.inventory.editable</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.view_stock_quant_tree_inventory_editable"/>
        <field name="arch" type="xml">
            <xpath expr="//list" position="inside">
                <field name="secondary_unit_id" optional="show"/>
                <field name="secondary_qty" optional="show"/>
            </xpath>
        </field>
    </record>

    <!-- editable list -->
    <record id="sh_stock_quant_list_inherit_editable" model="ir.ui.view">
        <field name="name">sh.stock.quant.list.inherit.editable</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.view_stock_quant_tree_editable"/>
        <field name="arch" type="xml">
            <xpath expr="//list" position="inside">
                <field name="secondary_unit_id" optional="show"/>
                <field name="secondary_qty" optional="show"/>
            </xpath>
        </field>
    </record>
</odoo>

