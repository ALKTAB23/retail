<?xml version='1.0' encoding='UTF-8'?>
<odoo>
    <record id="sh_product_template_form_view_custom" model="ir.ui.view">
        <field name="name">sh.product.template.form.view.custom<!-- TODO(v18): convert attrs/states to direct modifiers -->
</field>
        <field name="model">product.template<!-- TODO(v18): convert attrs/states to direct modifiers -->
</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <field name="categ_id" position="after">
                <field name="sh_qty_in_bag" invisible="product_variant_count &gt; 1"/>
            <!-- TODO(v18): convert attrs/states to direct modifiers -->
</field>

            <div name="button_box" position="inside">
                <button class="oe_stat_button" icon="fa-cubes" invisible="product_variant_count &gt; 1">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value" widget="statinfo"> <field name="units_on_hand" widget="statinfo" nolabel="1" class="mr4"/>Bags </span>
                        <span class="o_stat_text"> On Hand</span>
                    </div>
                </button>

                <button class="oe_stat_button" icon="fa-cubes" invisible="product_variant_count &gt; 1">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value" widget="statinfo"> <field name="units_forecasted" widget="statinfo" nolabel="1" class="mr4"/>Bags </span>
                        <span class="o_stat_text">Forecasted</span>
                    </div>
                </button>
            </div>
        <!-- TODO(v18): convert attrs/states to direct modifiers -->
</field>
    </record>
</odoo>
